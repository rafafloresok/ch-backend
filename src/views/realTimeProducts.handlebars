<h1>Productos en tiempo real</h1>
<h2>Eliminar producto</h2>
<form id="deleteProductForm" action="">
  <input type="text" placeholder="Ingrese ID" />
  <br />
  <input type="submit" value="Enviar" />
</form>
<h2>Crear producto</h2>
<form id="addProductForm" action="">
  <input type="text" placeholder="title" />
  <br />
  <input type="text" placeholder="description" />
  <br />
  <input type="text" placeholder="code" />
  <br />
  <input type="text" placeholder="price" />
  <br />
  <input type="text" placeholder="status" />
  <br />
  <input type="text" placeholder="stock" />
  <br />
  <input type="text" placeholder="category" />
  <br />
  <input type="text" placeholder="thumbnail 1" />
  <br />
  <input type="text" placeholder="thumbnail 2" />
  <br />
  <input type="submit" value="Enviar" />
</form>
<h2>Lista de productos</h2>
<span id="toast">Lista actualizada!</span>
{{#each products.payload}}
  <div>
    <h2>Title: {{this.title}}</h2>
    <p>Category: {{this.category}}</p>
    <p>Description: {{this.description}}</p>
    <p>Price: ${{this.price}}</p>
    {{#if this.status}}
      <p>Disponible</p>
    {{else}}
      <p>No disponible</p>
    {{/if}}
    <hr>
  </div>
{{/each}}

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>